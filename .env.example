# ================================================
# Restaurant POS System Environment Configuration
# ================================================

# Application
APP_NAME="Restaurant POS System"
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:your-generated-key-here
APP_URL=http://localhost/restaurant-pos
APP_LOCALE=ar

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=restaurant_pos
DB_USERNAME=root
DB_PASSWORD=

# Cache
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=sync

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (optional)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Restaurant Settings
RESTAURANT_NAME="مطعم النخيل"
CURRENCY=IQD
CURRENCY_SYMBOL="د.ع"
TAX_RATE=15.0
SERVICE_CHARGE=10.0
KITCHEN_POLLING_INTERVAL=3
RECEIPT_FOOTER="شكراً لزيارتكم"

# Security Settings
SESSION_LIFETIME=120
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15
CSRF_TOKEN_LIFETIME=3600
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Filesystem
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Backup
BACKUP_DISK=s3
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Print Settings (optional)
PRINTER_TYPE=pdf
PRINTER_NAME="Default Printer"
PRINTER_IP="192.168.1.100"
RECEIPT_WIDTH=80

# API Settings (for future mobile app)
API_ENABLED=false
API_TOKEN_LIFETIME=24
API_RATE_LIMIT=100

# Kitchen Display System
KDS_ENABLED=true
KDS_AUTO_REFRESH=true
KDS_SOUND_ALERTS=true

# Multi-branch (future)
MULTI_BRANCH_ENABLED=false
DEFAULT_BRANCH_ID=1